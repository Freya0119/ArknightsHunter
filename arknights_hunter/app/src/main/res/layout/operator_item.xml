<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="operator"
            type="com.example.arknighthunter.model.Operator" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/operator_name"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@{operator.operatorName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/operator_tag1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@{operator.tags[0]}"
            app:layout_constraintBottom_toBottomOf="@+id/operator_name"
            app:layout_constraintStart_toEndOf="@+id/operator_name"
            app:layout_constraintTop_toTopOf="@+id/operator_name" />

        <TextView
            android:id="@+id/operator_tag2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@{operator.tags[1]}"
            app:layout_constraintBottom_toBottomOf="@+id/operator_name"
            app:layout_constraintStart_toEndOf="@+id/operator_tag1"
            app:layout_constraintTop_toTopOf="@+id/operator_name" />

        <TextView
            android:id="@+id/operator_tag3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@{operator.tags[2]}"
            app:layout_constraintBottom_toBottomOf="@+id/operator_name"
            app:layout_constraintStart_toEndOf="@+id/operator_tag2"
            app:layout_constraintTop_toTopOf="@+id/operator_name" />

        <TextView
            android:id="@+id/operator_tag4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@{operator.tags[3]}"
            app:layout_constraintBottom_toBottomOf="@+id/operator_name"
            app:layout_constraintStart_toEndOf="@+id/operator_tag3"
            app:layout_constraintTop_toTopOf="@+id/operator_name" />

        <TextView
            android:id="@+id/operator_tag5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@{operator.tags[4]}"
            app:layout_constraintBottom_toBottomOf="@+id/operator_name"
            app:layout_constraintStart_toEndOf="@+id/operator_tag4"
            app:layout_constraintTop_toTopOf="@+id/operator_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>